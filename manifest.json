{
    "manifest_version": 2,
    "name": "Beauty Bookmark",
    "version": "1.0",

    "description": "Google Extension for listing bookmarks beautifully in a new tab.",

    "chrome_url_overrides": {
        "newtab": "bookmark.html"
    },

    "permissions": [
        "tabs",
        "management",
        "bookmarks",
        "chrome://favicon/"
    ],

    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },

    "content_security_policy": "img-src chrome://favicon;"
}
